/* pages/index/index.wxss */
.container {
  padding: 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 头部欢迎区域 */
.header-section {
  padding: 32rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #FFA500 100%);
}

.welcome-card {
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.2);
}

.welcome-text {
  text-align: center;
  margin-bottom: 32rpx;
}

.welcome-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  display: block;
  font-size: 24rpx;
  color: #666666;
}

.team-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f0f0;
}

.team-count {
  font-size: 26rpx;
  color: #FF6B35;
  font-weight: bold;
}

.location-info {
  font-size: 24rpx;
  color: #666666;
}

/* 快速操作区域 */
.quick-actions {
  padding: 32rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.action-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.action-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.action-desc {
  display: block;
  font-size: 22rpx;
  color: #666666;
}

/* 今日推荐区域 */
.today-recommend {
  padding: 0 32rpx 32rpx;
}

.section-title {
  margin-bottom: 24rpx;
}

.title-text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.title-subtitle {
  display: block;
  font-size: 24rpx;
  color: #666666;
}

.recommend-list {
  /* 推荐列表样式 */
}

.restaurant-card {
  margin-bottom: 24rpx;
  border-left: 6rpx solid #FF6B35;
}

.restaurant-info {
  /* 餐厅信息样式 */
}

.restaurant-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.restaurant-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.restaurant-rating {
  display: flex;
  align-items: center;
}

.rating-score {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF6B35;
  margin-right: 8rpx;
}

.rating-star {
  font-size: 24rpx;
}

.restaurant-details {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: #666666;
}

.restaurant-cuisine {
  margin-right: 24rpx;
  padding: 4rpx 12rpx;
  background-color: #fff2e8;
  color: #FF6B35;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.restaurant-distance {
  margin-right: 24rpx;
}

.restaurant-price {
  /* 价格样式 */
}

.restaurant-tags {
  margin-bottom: 16rpx;
}

.restaurant-tags .tag {
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.match-score {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.match-text {
  font-size: 24rpx;
  color: #666666;
}

.match-percentage {
  font-size: 28rpx;
  font-weight: bold;
  color: #52c41a;
}

/* 团队状态区域 */
.team-status {
  padding: 0 32rpx 32rpx;
}

.status-card {
  /* 状态卡片样式 */
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.status-item:last-child {
  border-bottom: none;
}

.status-label {
  font-size: 28rpx;
  color: #666666;
}

.status-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF6B35;
}

/* 底部操作按钮 */
.bottom-actions {
  padding: 32rpx;
  background-color: #ffffff;
  border-top: 2rpx solid #f0f0f0;
  position: sticky;
  bottom: 0;
  z-index: 100;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .action-grid {
    gap: 16rpx;
  }
  
  .action-item {
    padding: 24rpx;
  }
  
  .action-icon {
    font-size: 40rpx;
  }
  
  .welcome-title {
    font-size: 32rpx;
  }
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #999999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: #999999;
  font-size: 28rpx;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  margin-bottom: 32rpx;
}

.empty-action {
  padding: 16rpx 32rpx;
  background-color: #FF6B35;
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 24rpx;
} 